<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_background"
            tools:context=".ui.home.HomeActivity">
        <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/firstImage"
                        android:layout_margin="16dp"
                        android:src="@mipmap/ic_launcher"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/rsvp_card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title_regular"/>

                <ImageView
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/padding_3"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <ImageView
                android:id="@+id/imageView2" android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_shipping"/>


        <LinearLayout
                android:background="@drawable/new_background"
                app:layout_constraintTop_toBottomOf="@id/appBarLayout2"
                android:layout_width="match_parent" android:layout_height="0dp"
                android:orientation="vertical">

            <TextView android:textColor="@color/white"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="..."
                      android:visibility="gone"
                      android:textSize="15dp"
                      android:id="@+id/childName"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"

                      android:textAlignment="center"

            />
            <TextView android:textColor="@color/white"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:text="@string/join_me_to_my_birthday_party"
                      android:textSize="20dp"
                      android:padding="20dp"
                      android:textAlignment="center"

            />
            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="200dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/birthday"
                    android:scaleType="centerCrop"
            />

            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/has_invited_you_please_respond"
                      android:padding="5dp"
                      android:id="@+id/user"
                      android:textSize="14dp"
                      android:textStyle="bold"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"


            />

            <View
                    android:id="@+id/themeLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    android:background="#2F000000"/>
            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/name_of_the_guest"
                      android:textSize="15dp"
                      android:visibility="gone"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"

                      android:textAlignment="center"

            />

            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/party_theme"
                      android:textSize="25dp"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:id="@+id/themeBanner"
                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"
            />


            <TextView android:textColor="@color/white"
                      android:padding="10dp"
                      android:layout_margin="10dp"
                      android:id="@+id/theme"
                      android:text="..."
                      android:textAlignment="center"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    android:background="#2F000000"/>

            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/date"
                      android:textSize="25dp"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"
            />
            <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/date_spinner"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/time_start"
                      android:textSize="25dp"
                      android:padding="5dp"
                      android:textStyle="bold"

                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"
            />
            <TextView
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="..."
                    android:layout_margin="10dp"
                    android:id="@+id/time_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/time_end"
                      android:textSize="25dp"
                      android:padding="5dp"
                      android:textStyle="bold"

                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"
            />
            <TextView
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="..."
                    android:layout_margin="10dp"
                    android:id="@+id/time_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/venue"
                      android:textSize="25dp"
                      android:padding="5dp"
                      android:textStyle="bold"

                      android:textFontWeight="900"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:text="@string/click_on_the_map_preview_to_see_more"
                      android:gravity="center"
                      android:visibility="gone"
                      android:id="@+id/map_header"
                      android:background="@color/colorPrimaryDark"
                      android:textAlignment="center"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="5dp"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:text="@string/no_location"
                      android:gravity="center"
                      android:visibility="gone"
                      android:id="@+id/map_header_disable"
                      android:background="@color/colorPrimaryDark"
                      android:textAlignment="center"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="5dp"
            />

            <ImageView android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:src="@drawable/map"
                       android:scaleType="centerCrop"
                       android:padding="10dp"
                       android:layout_margin="10dp"
                       android:visibility="gone"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:background="@drawable/rimg"
                       android:id="@+id/maplogo"
            />
            <TextView android:textColor="@color/white"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textSize="23dp"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:inputType="textPostalAddress"
                      android:lines="3"
                      android:textFontWeight="1000"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:textAlignment="center"
                      android:layout_marginBottom="10dp"
                      android:id="@+id/street"
            />

            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/zip_code_and_city"
                      android:visibility="gone"
                      android:textSize="23dp"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textFontWeight="1000"
                      android:inputType="textPostalAddress"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"

                      android:textAlignment="center"
                      android:layout_marginBottom="10dp"
                      android:id="@+id/zip"
            />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                          android:orientation="horizontal"
                          android:layout_marginBottom="10dp"
                          android:weightSum="2"
            >

                <TextView android:textColor="@color/white" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/city_name"
                          android:layout_weight="1"
                          android:textSize="23dp"
                          android:padding="5dp"
                          android:textStyle="bold"
                          android:id="@+id/city"
                          android:textFontWeight="1000"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"

                          android:textAlignment="center"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
            >

                <TextView android:textColor="@color/white" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/zip_code"
                          android:layout_weight="1"
                          android:textSize="23dp"
                          android:padding="5dp"
                          android:textStyle="bold"
                          android:inputType="number"
                          android:id="@+id/zipCode"
                          android:textFontWeight="1000"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"

                          android:textAlignment="center"
                />
            </LinearLayout>
            <TextView android:textColor="@color/white" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/add_here_all_the_infomation_n_required_such_as_ndrop_pin_code"
                      android:textSize="23dp"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textFontWeight="1000"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:lines="3"
                      android:textAlignment="center"
                      android:id="@+id/other_addr"
                      android:layout_marginBottom="10dp"
            />
            <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2"
                    android:id="@+id/hide_1"
            >
                <android.support.v7.widget.AppCompatButton
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:id="@+id/question_resubmit"
                        android:layout_marginBottom="10dp"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textFontWeight="600"
                        android:textColor="@color/white"
                />
            </LinearLayout>
            <LinearLayout
                    android:baselineAligned="false"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/hide_2"
            >
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="match_parent">
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#331EB5"
                            android:shadowColor="#331EB5"
                            android:layout_weight="1"
                            android:background="@drawable/white_edit_text"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:id="@+id/accept"
                            android:text="@string/accept_and_rsvp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="match_parent">
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:backgroundTint="#331EB5"
                            android:gravity="center"
                            android:shadowColor="#331EB5"
                            android:background="@drawable/white_edit_text"
                            android:textAllCaps="false"
                            android:id="@+id/reject"
                            android:layout_weight="1"
                            android:text="@string/reject"
                    />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
